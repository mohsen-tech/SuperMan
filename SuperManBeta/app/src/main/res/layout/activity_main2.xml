<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="info.intech.supermanbeta.vorod_or_sabt_name">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff">

            <Button
                android:id="@+id/back_btn_main2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_chevron_right_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:text="ورود"
                android:textColor="#444444"
                android:textSize="19sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/back_btn_main2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/abc_edit_text_material" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="ورود به حساب کاربری"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/abc_edit_text_material" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/name_karbari_main2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center"
                android:hint="نام کاربری"
                android:inputType="phone" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:background="@mipmap/person_vector" />
        </RelativeLayout>

        <TextView
            android:id="@+id/se_noqte"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/abc_edit_text_material" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/se_noqte"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/ramz_obor_main2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center"
                android:hint="رمز عبور"
                android:inputType="phone" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:background="@mipmap/key_vector" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/abc_edit_text_material" />

        <Button
            android:id="@+id/btn_vorod_with_phone_main2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_shape_first_page"
            android:text="ورود با شماره موبایل"
            android:textColor="#fd4444"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_new_sign_main2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_shape_first_page"
            android:text="عضویت جدید"
            android:textColor="#fd4444"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ignore_pass_main2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="فراموشی رمز عبور"
            android:textColor="#fd4444"
            android:textSize="18sp" />
    </LinearLayout>


    <Button
        android:id="@+id/vorod_main2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fd4444"
        android:text="ورود"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</RelativeLayout>